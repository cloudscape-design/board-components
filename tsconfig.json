{
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig to read more about this file */
    "incremental": true,
    "target": "ES2019",
    "jsx": "react-jsx",
    "types": [],
    "lib": [
      "es2019",
      "dom"
    ],
    "module": "ESNext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "outDir": "lib/components",
    "declaration": true,
    "rootDir": "src",
    "skipLibCheck": true,
    "strict": true
  },
  "include": [
    "src",
    "types"
  ],
  "exclude": [
    "**/*.test.tsx"
  ]
}