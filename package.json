{
  "name": "@cloudscape-design/dashboard-components",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/cloudscape-design/dashboard-components.git"
  },
  "homepage": "https://cloudscape.design",
  "scripts": {
    "prebuild": "rm -rf lib dist",
    "build": "run-p build:src:* && run-p build:pages:*",
    "postbuild": "cat package.json | jq  'del(.scripts)' > lib/components/package.json && cp README.md lib/components/",
    "lint": "eslint --ignore-path .gitignore --ext ts,tsx,js .",
    "prepare": "husky install",
    "test:unit": "vitest run --config vite.unit.config.js",
    "test:e2e": "run-p -r preview test:e2e:vitest",
    "test:e2e:update": "run-p -r preview test:e2e:vitest:update",
    "test:e2e:vitest": "vitest run --config vite.e2e.config.js",
    "test:e2e:vitest:update": "vitest run -u --config vite.e2e.config.js",
    "test": "npm run test:unit",
    "start": "run-p watch dev",
    "preview": "vite preview",
    "dev": "vite",
    "build:src:js": "tsc",
    "build:src:css": "node scripts/compile-styles.js",
    "build:pages:vite": "vite build",
    "build:pages:tsc": "tsc -p pages/tsconfig.json",
    "watch:js": "tsc --watch",
    "watch:css": "chokidar \"./src/**/*.scss\" -c \"npm run build:css\"",
    "watch": "run-p watch:*"
  },
  "engines": {
    "node": ">= 14"
  },
  "dependencies": {
    "clsx": "^1.2.1"
  },
  "peerDependencies": {
    "@cloudscape-design/components": "^3",
    "@cloudscape-design/design-tokens": "^3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@cloudscape-design/browser-test-tools": "^3.0.4",
    "@cloudscape-design/components": "^3",
    "@cloudscape-design/design-tokens": "^3",
    "@cloudscape-design/global-styles": "^1.0.1",
    "@cloudscape-design/theming-build": "^1",
    "@juggle/resize-observer": "^3.4.0",
    "@testing-library/react": "^13.4.0",
    "@types/jest-image-snapshot": "^5.1.0",
    "@types/react": "^18.0.18",
    "@types/react-dom": "^18.0.6",
    "@typescript-eslint/eslint-plugin": "^5.33.1",
    "@typescript-eslint/parser": "^5.33.1",
    "@vitejs/plugin-react": "^2.1.0",
    "chokidar-cli": "^3.0.0",
    "eslint": "^8.22.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-header": "^3.1.1",
    "eslint-plugin-no-unsanitized": "^4.0.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.30.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-unicorn": "^43.0.2",
    "husky": "^8.0.1",
    "jest-image-snapshot": "^5.2.0",
    "jsdom": "^20.0.0",
    "lint-staged": "^13.0.3",
    "npm-run-all": "^4.1.5",
    "prettier": "2.7.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.3.0",
    "typescript": "^4.7.4",
    "vite": "^3.1.0",
    "vitest": "^0.23.1"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ],
    "package-lock.json": [
      "./scripts/prepare-package-lock.js"
    ]
  }
}
