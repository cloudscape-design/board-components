{
  "name": "@cloudscape-design/dashboard-components",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/cloudscape-design/dashboard-components.git"
  },
  "homepage": "https://cloudscape.design",
  "scripts": {
    "prebuild": "rm -rf lib",
    "build": "concurrently -n build-css,build-js \"npm run build:css\" \"npm run build:js\"",
    "postbuild": "cat package.json | jq  'del(.scripts)' > lib/components/package.json && cp README.md lib/components/",
    "lint": "eslint --ignore-path .gitignore --ext ts,tsx,js .",
    "prepare": "husky install",
    "test": "vitest",
    "start": "concurrently -n components,pages \"npm run watch\" \"vite\"",
    "build:js": "tsc",
    "build:css": "node scripts/compile-styles.js",
    "watch:js": "tsc --watch",
    "watch:css": "chokidar \"./src/**/*.scss\" -c \"npm run build:css\"",
    "watch": "concurrently -n watch-css,watch-js \"npm run watch:css\" \"npm run watch:js\""
  },
  "engines": {
    "node": ">= 14"
  },
  "dependencies": {},
  "peerDependencies": {
    "@cloudscape-design/components": "^3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@cloudscape-design/components": "^3",
    "@cloudscape-design/theming-build": "^1",
    "@testing-library/react": "^13.4.0",
    "@types/react": "^18.0.18",
    "@types/react-dom": "^18.0.6",
    "@typescript-eslint/eslint-plugin": "^5.33.1",
    "@typescript-eslint/parser": "^5.33.1",
    "@vitejs/plugin-react": "^2.1.0",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^7.4.0",
    "eslint": "^8.22.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-header": "^3.1.1",
    "eslint-plugin-no-unsanitized": "^4.0.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.30.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-unicorn": "^43.0.2",
    "husky": "^8.0.1",
    "jsdom": "^20.0.0",
    "lint-staged": "^13.0.3",
    "prettier": "2.7.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.3.0",
    "typescript": "^4.7.4",
    "vite": "^3.1.0",
    "vitest": "^0.23.1"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ],
    "package-lock.json": [
      "./scripts/prepare-package-lock.js"
    ]
  }
}
